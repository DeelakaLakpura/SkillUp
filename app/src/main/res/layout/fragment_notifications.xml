<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Lectures.ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boldtext"
        android:text="ðŸ•  Set Time Table."
        android:textSize="20sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/titleEt"
        android:layout_width="match_parent"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:drawableTint="@color/main_color_2"
        android:fontFamily="@font/boldtext"
        android:hint="Enter Lecture | Exam title"
        android:inputType="textPersonName|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        tools:layout_editor_absoluteX="10dp" />


    <EditText
        android:id="@+id/txthourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="11sp"
        android:drawableTint="@color/main_color_2"
        android:fontFamily="@font/boldtext"
        android:hint="Enter Lecture| Exam Description"
        android:inputType="textPersonName|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/titleEt"
        tools:layout_editor_absoluteX="10dp" />


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/r_b"
        android:gravity=""
        android:text="Select Category"
        android:textColor="@color/main_color_1"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/txthourse"
        app:layout_constraintStart_toStartOf="@+id/txthourse"
        app:layout_constraintTop_toBottomOf="@+id/txthourse" />





    <LinearLayout
        android:id="@+id/snipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1">


        <Spinner
            android:id="@+id/my_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:drawablePadding="10dp"
            android:padding="10dp" />
    </LinearLayout>


    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:drawableLeft="@drawable/baseline_more_time_24"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/main_color_2"
        android:fontFamily="@font/boldtext"
        android:hint="Enter Start Time"
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/snipper"
        app:layout_constraintStart_toStartOf="@+id/snipper"
        app:layout_constraintTop_toBottomOf="@+id/snipper" />




    <TextView
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        android:drawableLeft="@drawable/baseline_date_range_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:drawableTint="@color/main_color_2"
        android:fontFamily="@font/boldtext"
        android:hint="Select Date"
        android:inputType="date"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"


        app:layout_constraintTop_toBottomOf="@+id/time" />


    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/r_b"
        android:gravity=""
        android:text="Select Module"
        android:textColor="@color/main_color_1"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintEnd_toEndOf="@+id/txthourse"
        app:layout_constraintStart_toStartOf="@+id/txthourse"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />





    <LinearLayout
        android:id="@+id/snipper1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt3">


        <Spinner
            android:id="@+id/my_spinner_module"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/blue_border_rounded_cornwe"
            android:drawablePadding="10dp"
            android:padding="10dp" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/uploadBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snipper1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_1"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_view_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_b"
                android:text="UPLOAD TIME TABLE âž¤"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>